{
  "name": "@sparkleprotocol/core",
  "version": "1.0.0",
  "description": "Trustless atomic swaps for Bitcoin Ordinals via Lightning Network - Mainnet Validated",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core/index.js",
      "types": "./dist/core/index.d.ts"
    },
    "./adapters": {
      "import": "./dist/adapters/index.js",
      "types": "./dist/adapters/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "bin": {
    "sparkle": "./dist/cli/sparkle-cli.js"
  },
  "scripts": {
    "build": "tsc",
    "build:browser": "node scripts/build-browser.mjs",
    "build:all": "tsc && node scripts/build-browser.mjs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "vitest",
    "test:swap": "npx tsx tests/swap.test.ts",
    "test:e2e": "npx tsx tests/end-to-end-swap.ts",
    "test:verify": "npx tsx tests/verify-deep.ts",
    "cli": "npx tsx src/cli/sparkle-cli.ts"
  },
  "keywords": [
    "bitcoin",
    "ordinals",
    "inscriptions",
    "atomic-swap",
    "lightning-network",
    "taproot",
    "nostr",
    "cryptocurrency",
    "btc",
    "swap",
    "trustless"
  ],
  "dependencies": {
    "@noble/curves": "^1.9.7",
    "@noble/hashes": "^1.3.3",
    "@scure/base": "^1.1.5",
    "@scure/btc-signer": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "esbuild": "^0.27.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.1.0"
  },
  "author": "David A. Michael",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProtocolSparkle/Sparkle-Protocol"
  },
  "bugs": {
    "url": "https://github.com/ProtocolSparkle/Sparkle-Protocol/issues"
  },
  "homepage": "https://sparkleprotocol.com",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}